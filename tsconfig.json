{
  "compilerOptions": {
    "allowJs": true,
    "jsx": "react-jsx",
    "target": "es2017",
    "module": "esnext",
    "moduleResolution": "node",
    "pretty": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "sourceMap": true,
    "paths": {
      "*": [
        "*",
        "client/*",
        "client/modules/*",
        "libs/BaseUI/*",
        "server/*",
        "server/modules/*"
      ]
    }
  },
  "exclude": [
    "build",
    "docs",
    "node_modules",
    "webpack.dev.js",
    "webpack.prod.js",
    "webpackUtils/webpackRules.js"
  ]
}
